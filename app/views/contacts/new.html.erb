  <h1>Contact Us</h1>
</div>
<div class="container contact-container">
  <div class="row">
    <div class="col-10 offset-1 col-md-6 offset-md-0 col-lg-4 offset-lg-2">
      <h3 class="mb-4">ADDRESS</h3>
      <p>4th Floor</p>
      <p>73 New Bond Street</p>
      <p>London</p>
      <p>W1S 1RS</p>
      <br>
      <p>Phone: <a href="tel:00447740911377">+44 (0)7740 911 377</a></p>
      <p>Email: <a href="mailto:zubair.shyan@nes-style.co.uk">zubair.shyan@nes-style.co.uk</a></p>
    </div>
    <div class="col-10 offset-1 col-md-6 offset-md-0 col-lg-4 margin-top-sm-device">
      <h3 class="mb-4">LEAVE A MESSAGE</h3>
      <%= simple_form_for @contact, :html => {:class => 'form-horizontal', autocomplete: 'off' } do |f| %>
        <%= f.input :name, :required => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :message, :as => :text, :required => true %>
        <div class="hidden">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'SEND MESSAGE', :class=> "btn w-100 btn-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
